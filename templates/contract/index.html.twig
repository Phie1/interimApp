{% extends 'base.html.twig' %}

{% block title %}Gestion des contrats{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>

<div class="example-wrapper">
    <h1>Gestion des contrats</h1>

    <div id="actions" style="margin: 10px;">
        <a href="{{ path('new') }}" class="btn btn-primary" role="button"   >Nouveau contrat</a>
    </div>

    <table class="table">
        <th scope="col">#</th>
        <th scope="col">Intérimaire</th>
        <th scope="col">Début</th>
        <th scope="col">Fin</th>
        <th scope="col">Statut</th>
        <th scope="col">Actions</th>
        {% for contract in contracts %}
            <tr>
                <td scope="row">{{ contract.id }}</td>
                <td>{{ contract.interim.name }} {{ contract.interim.surname }}</td>
                <td>{{ contract.dateStart | date('d/m/Y') }}</td>
                <td>{{ contract.dateEnd | date('d/m/Y') }}</td>
                <td>{{ contract.status }}</td>
                <td>
                    <button type="button" class="btn btn-default">Modifier</button>
                    <button type="button" class="btn btn-default">Supprimer</button>
                </td>
            </tr>
        {% endfor %}

    </table>
</div>
{% endblock %}
