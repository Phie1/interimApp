{% extends 'base.html.twig' %}

{% block title %}Gestion des contrats{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>

<div class="example-wrapper">
    <h1>Nouveau contrat</h1>


    {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_errors(form.interim) }}
        {{ form_label(form.interim) }} : {{ form_widget(form.interim) }}
        <br/>
        {{ form_row(form.dateStart) }}
        <br/>
        {{ form_row(form.dateEnd) }}
        <br/>
        {{ form_errors(form.status) }}
        {{ form_label(form.status) }} : {{ form_widget(form.status) }}
        <br/>
        {{ form_row(form.save) }}
    {{ form_end(form) }}
</div>
{% endblock %}
