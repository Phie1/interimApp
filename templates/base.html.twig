<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Interim App{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <style>
            .example-wrapper { margin: 1em auto; max-width: 1000px; width: 95%; font: 18px/1.5 sans-serif; }
        </style>
    </head>
    <body>
        {% block header %}
            <header>
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <a class="navbar-brand" href="#">Interim App</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-item nav-link active" href="{{ path('homepage') }}">Accueil <span class="sr-only">(current)</span></a>
                            <a class="nav-item nav-link" href="{{ path('interim') }}">Int√©rimaires</a>
                            <a class="nav-item nav-link" href="{{ path('contract') }}">Contrats</a>
                            <a class="nav-item nav-link" href="{{ path('mission') }}">Suivis de mission</a>
                            <a class="nav-item nav-link" href="{{ path('stats') }}">Statistiques</a>
                        </div>
                    </div>
                </nav>
            </header>
        {% endblock %}

        {% block body %}{% endblock %}

        {% block javascripts %}
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        {% endblock %}
    </body>
</html>
