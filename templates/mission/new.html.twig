{% extends 'base.html.twig' %}

{% block title %}Gestion d'un suivi de mission{% endblock %}

{% block body %}

<div class="example-wrapper">
    <a href="{{ path('mission') }}" class="btn btn-primary" role="button">Retour</a>
    <h1>Gestion d'un suivi de mission</h1>


    {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_errors(form.interim) }}
        {{ form_label(form.interim) }} : {{ form_widget(form.interim) }}
        <br/>
        {{ form_errors(form.contract) }}
        {{ form_label(form.contract) }} : {{ form_widget(form.contract) }}
        <br/>
        {{ form_errors(form.rating) }}
        {{ form_label(form.rating) }} : {{ form_widget(form.rating) }}
        <br/>
        {{ form_errors(form.status) }}
        {{ form_label(form.status) }} : {{ form_widget(form.status) }}
        <br/>
        {{ form_row(form.save) }}
    {{ form_end(form) }}
</div>
{% endblock %}
